{
  // Typescript parser 사용.
  "parser": "@typescript-eslint/parser",
  // import 정렬, prettier 코드 포맷팅을 플러그인을 통해 ESLint로 사용.
  "plugins": ["import", "prettier"],
  // Typescript 설정을 .ts, .tsx 파일에만 적용.
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:prettier/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "settings": {
    "import/extensions": ["js", "jsx", "ts", "tsx"]
  },
  "rules": {
    // Prettier 규칙 위반 시 에러로 판단해 ESLint가 auto fix하도록 설정.
    "prettier/prettier": "error",
    // Import 순서 규칙 위반 시 에러로 판단해 ESLint가 auto fix하도록 설정.
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "parent", "sibling", "index"],
        "pathGroups": [
          // next로 시작하는 모듈을 external 그룹의 최상단으로 정렬.
          {
            "pattern": "next*",
            "group": "external",
            "position": "before"
          },
          // react로 시작하는 모듈을 external 그룹의 최상단으로 정렬.
          {
            "pattern": "react*",
            "group": "external",
            "position": "before"
          }
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        // 그룹간 빈 줄 추가.
        "newlines-between": "always"
      }
    ]
  }
}
